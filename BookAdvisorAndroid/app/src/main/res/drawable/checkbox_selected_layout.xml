<?xml version="1.0" encoding="utf-8"?>
<layer-list
        xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
                android:shape="rectangle"
                xmlns:android="http://schemas.android.com/apk/res/android">
            <corners
                    android:radius="2dp" />
            <size
                    android:height="15dp"
                    android:width="15dp" />
            <solid
                    android:color="@color/colorWhite" />
            <stroke
                    android:color="@color/colorWhite"
                    android:width="1dp" />
        </shape>
    </item>
    <item
            android:drawable="@drawable/ic_black_tick"
            android:gravity="center">

    </item>

</layer-list>

