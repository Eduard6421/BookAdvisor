<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/book_lisitiem_horizontal_cover"
        android:layout_width="80dp"
        android:layout_height="match_parent"

        android:layout_margin="32dp"

        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"

        android:src="@drawable/book_cover"
    />

    <TextView
        android:id="@+id/book_lisitiem_horizontal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toEndOf="@id/book_lisitiem_horizontal_cover"
        android:layout_alignTop="@id/book_lisitiem_horizontal_cover"

        android:layout_marginTop="4dp"

        android:textColor="@color/colorBlack"
        android:text="Naruto Shippuden"
        android:textSize="16sp"
        android:textStyle="bold"
    />

    <TextView
        android:id="@+id/book_lisitiem_horizontal_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/book_lisitiem_horizontal_title"
        android:layout_alignStart="@id/book_lisitiem_horizontal_title"

        android:layout_marginTop="4dp"

        android:textColor="@color/colorBlack"
        android:text="by Masashi Kishimoto"
        android:textSize="16sp"
    />

    <RatingBar
            android:id="@+id/book_lisitiem_horizontal_ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="6dp"
            android:layout_marginEnd="4dp"

            style="@style/Base.Widget.AppCompat.RatingBar.Small"
            android:layout_below="@id/book_lisitiem_horizontal_author"
            android:layout_alignStart="@id/book_lisitiem_horizontal_author"

    />

    <TextView
        android:id="@+id/book_lisitiem_horizontal_ratingtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toEndOf="@id/book_lisitiem_horizontal_ratingbar"
        android:layout_alignTop="@id/book_lisitiem_horizontal_ratingbar"

        android:layout_marginEnd="4dp"
        android:layout_marginTop="-4dp"

        android:textColor="@color/colorBlack"
        android:text="5.0"
        android:textSize="16sp"
    />

    <TextView
        android:id="@+id/book_lisitiem_horizontal_nrrates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/book_lisitiem_horizontal_ratingbar"
        android:layout_alignStart="@id/book_lisitiem_horizontal_ratingbar"

        android:textColor="@color/colorBlack"
        android:text="19929 ratings"
        android:textSize="16sp"
    />

    <TextView
        android:id="@+id/book_lisitiem_horizontal_nrpages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/book_lisitiem_horizontal_nrrates"
        android:layout_alignStart="@id/book_lisitiem_horizontal_ratingbar"

        android:layout_marginTop="4dp"

        android:textColor="@color/colorBlack"
        android:text="100 pages"
        android:textSize="16sp"
    />


</RelativeLayout>