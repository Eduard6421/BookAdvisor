<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
            android:id="@+id/inbox_item_profilepic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
    />

    <TextView
            android:id="@+id/inbox_item_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/inbox_item_profilepic"

            android:text="Cristi Dospra"
    />

    <TextView
            android:id="@+id/inbox_item_last_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/inbox_item_name_textview"

            android:text="01 Apr"
    />

</RelativeLayout>