<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBarBackground">

    <!-- My profile picture : start -->
    <ImageView
            android:id="@+id/navigation_profile_pic"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginTop="?android:attr/actionBarSize"
            android:layout_marginStart="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_default_profile"
            android:clickable="true"/>
    <!-- My profile picture : end -->

    <!-- My employeeEmail address : start -->
    <TextView
            android:id="@+id/navigation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="12dp"
            android:layout_centerVertical="true"

            android:layout_toEndOf="@+id/navigation_profile_pic"
            android:textColor="@color/colorNavInactive"
            android:textSize="16sp"
            android:text="Cristi Dospra"/>
    <!-- My employeeEmail address : end -->

</RelativeLayout>